<div class="container py-5">
  <% if current_user %>
    <%= render "appointments/current" %>

    <% if current_user.is_admin? %>
      <div class="admin mt-4"> <!-- Spacing for better layout -->
        <h3><b>Experiments</b></h3>

        <ul class="list-unstyled"> <!-- Removed list-group for a cleaner look -->
          <% @experiments.each do |experiment| %>
            <li class="mb-2">
              <%= link_to experiment.name, experiment, class: "text-decoration-none text-dark" %> <!-- Custom link style -->
            </li>
          <% end %>
        </ul>

        <%= button_to "Create An Experiment", new_experiment_path, method: :get, class: "btn btn-primary mt-2" %> <!-- Spaced button -->
      </div>
    <% end %>

  <% else %>
    <%=controller.redirect_to home_index_path %>
  <% end %>
</div>
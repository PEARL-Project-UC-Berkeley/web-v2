<h1>Upcoming Appointments</h1>

<div id="appointments">
  <% current_user.appointments.where("start_time > ?", Time.now).order(start_time: :desc).each do |appointment| %>
    <p>
     <%= link_to appointment.purpose, appointment %> for  <%= appointment.user.email %> (<%= appointment.start_time&.strftime('%H:%M %m/%d/%Y') %> to <%= appointment.end_time&.strftime('%H:%M %m/%d/%Y') %>)
    </p>
  <% end %>
</div>

<h1>Past Appointments</h1>

<div id="appointments">
  <% Appointment.where("start_time < ?", Time.now).order(start_time: :desc).each do |appointment| %>
    <p>
      <%= link_to appointment.purpose, appointment %> for  <%= appointment.user.email %> (<%= appointment.start_time&.strftime('%H:%M %m/%d/%Y') %> to <%= appointment.end_time&.strftime('%H:%M %m/%d/%Y') %>)
    </p>
  <% end %>
</div>



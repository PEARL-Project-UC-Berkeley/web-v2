<div class="py-5 container">
  <%= render "current" %>

  <h1 class="text-center my-4">Upcoming Appointments</h1>

  <div id="appointments" class="mb-5"> <!-- Added bottom margin -->
    <% current_user.appointments.where("start_time > ?", Time.now).order(start_time: :desc).each do |appointment| %>
      <div class="card mb-3"> <!-- Bootstrap card for each appointment -->
        <div class="card-body">
          <p class="card-text">
            <%= link_to appointment.purpose, appointment, class: "text-decoration-none" %>
            (<%= appointment.start_time&.strftime('%H:%M %m/%d/%Y') %> to
            <%= appointment.end_time&.strftime('%H:%M %m/%d/%Y') %>)
          </p>
        </div>
      </div>
    <% end %>
  </div>

  <h1 class="text-center my-4">Past Appointments</h1>

  <div id="appointments">
    <% current_user.appointments.where("start_time < ?", Time.now).order(start_time: :desc).each do |appointment| %>
      <div class="card mb-3"> <!-- Bootstrap card for each appointment -->
        <div class="card-body">
          <p class="card-text">
            <%= link_to appointment.purpose, appointment, class: "text-decoration-none" %>
            (<%= appointment.start_time&.strftime('%H:%M %m/%d/%Y') %> to
            <%= appointment.end_time&.strftime('%H:%M %m/%d/%Y') %>)
          </p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mb-4"> <!-- Center the button -->
    <%= button_to "New Appointment", new_appointment_path, method: :get, class: "btn btn-primary" %>
  </div>
</div>
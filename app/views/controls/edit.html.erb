<h1>Control#edit</h1>

<% if @control.is_a?(Control::Toggle) %>
  <%= form_with url: experiment_control_path(id: "#{@control.type}_#{@control.id}"), model: @control, method: :put do |f| %>
    <p>
      <%= f.label :label %><br>
      <%= f.text_field :label %>
      <%= f.hidden_field :type, value: "toggle" %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
<% end %>


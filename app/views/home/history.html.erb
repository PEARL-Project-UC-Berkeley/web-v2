<div class="container mt-5">
  <div class="timeline-container">
    <button class="btn btn-primary btn-nav me-2" id="prevBtn">&laquo; Prev</button>

    <div class="timeline">
      <!-- Timeline item 1 -->
      <div class="timeline-item">
        <h5>Event 1</h5>
        <p>Description for event 1.</p>
      </div>

      <!-- Timeline item 2 -->
      <div class="timeline-item">
        <h5>Event 2</h5>
        <p>Description for event 2.</p>
      </div>

      <!-- Timeline item 3 -->
      <div class="timeline-item">
        <h5>Event 3</h5>
        <p>Description for event 3.</p>
      </div>

      <!-- Timeline item 4 -->
      <div class="timeline-item">
        <h5>Event 4</h5>
        <p>Description for event 4.</p>
      </div>
    </div>

    <button class="btn btn-primary btn-nav ms-2" id="nextBtn">Next &raquo;</button>
  </div>
</div>

<!-- Bootstrap JS and custom script -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script>
    const timeline = document.querySelector('.timeline');
    const items = document.querySelectorAll('.timeline-item');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    let currentIndex = 0;

    function updateTimeline() {
        const itemWidth = items[0].offsetWidth;
        timeline.style.transform = `translateX(-${currentIndex * itemWidth}px)`;

        // Disable buttons at the ends
        prevBtn.disabled = currentIndex === 0;
        nextBtn.disabled = currentIndex === items.length - 1;
    }

    prevBtn.addEventListener('click', () => {
        if (currentIndex > 0) currentIndex--;
        updateTimeline();
    });

    nextBtn.addEventListener('click', () => {
        if (currentIndex < items.length - 1) currentIndex++;
        updateTimeline();
    });

    // Initial state
    updateTimeline();
</script>
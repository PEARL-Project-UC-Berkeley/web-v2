<div class="bg-body-tertiary p-4">
  <h3 class="text-center mb-5">Experiments</h3>
  <div class="container">
    <div class="row g-4 justify-content-center">
      <% Experiment.all.each do |e| %>
        <div class="col-lg-3 col-md-4 col-sm-6 d-flex justify-content-center">
          <div class="card shadow-sm border-0" style="width: 18rem;">
            <%= image_tag(e.image || "physics_image.jpg", alt: "Experiment photo", class: "card-img-top") %>
            <div class="card-body text-center">
              <h5 class="card-title mb-2"><%= e.name || "Experiment Name" %></h5>
              <p class="card-text text-muted"><%= e.description || "Experiment Description" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h3 class="text-center mb-4 pt-5">The Team</h3>
  <div class="row justify-content-center"> <!-- Added justify-content-center to center cards -->
    <% User.admin.each do |u| %>
      <div class="col-md-2 mb-4 d-flex justify-content-center"> <!-- Added d-flex and justify-content-center -->
        <div class="card shadow" style="width: 200px;"> <!-- Set a fixed width for smaller cards -->
          <%= image_tag(u.image || 'seal.png', class: 'card-img-top', style: 'width: 100%; height: auto;', alt: "#{u.name || 'Temp Name'} photo") %>
          <div class="card-body">
            <h5 class="card-title"><%= u.name || "Temp Name" %></h5>
            <p class="card-text"><%= u.description || "Temp Description" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>